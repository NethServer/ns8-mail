{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure mail",
    "$id": "http://nethserver.org/json-schema/task/input/mail/configure",
    "description": "Configure mail",
    "examples": [
        {
            "user_domain": "dom.test",
            "hostname": "mail.dom.test"
        }
    ],
    "type": "object",
    "required": [
        "user_domain",
        "hostname"
    ],
    "properties": {
        "user_domain": {
            "type": "string",
            "title": "User domain name",
            "description": "Must be the name of a configured user domain",
            "minLength": 1
        },
        "hostname": {
            "type": "string",
            "title": "Mail host name",
            "description": "Host name used as SMTP/HELO and for the TLS certificate",
            "minLength": 1,
            "format": "idn-hostname"
        }
    }
}
