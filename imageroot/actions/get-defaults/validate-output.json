{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "get-defaults output",
    "$id": "http://schema.nethserver.org/mail/get-defaults-output.json",
    "description": "Return values that suit the configure-module action input",
    "examples": [
        {
            "hostname": "cs1.nethserver.test",
            "mail_domain": "nethserver.test",
            "user_domains": [
                "ldap.test",
                "ad.nethserver.test"
            ]
        }
    ],
    "type": "object",
    "properties": {
        "hostname": {
            "type": "string",
            "title": "Mail host name",
            "minLength": 1,
            "format": "idn-hostname"
        },
        "mail_domain": {
            "type": "string",
            "title": "Initial mail domain",
            "minLength": 1,
            "format": "idn-hostname"
        },
        "user_domains": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "http://schema.nethserver.org/mail.json#/$defs/user-domain"
            }
        }
    }
}
