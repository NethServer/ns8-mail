        },
        {
            "sender": "@foo.com",
            "host": "smtp.domain.com",
            "port": 587,
            "mandatory_tls": false,
            "username": "",
            "password": "",
            "enabled": false,
            "description": "rule2"
        },
        {
            "recipient": "foo@foo.com",
            "host": "smtp.domain.com",
            "port": 587,
            "mandatory_tls": true,
            "username": "foo@domain.com",
            "password": "password",
            "enabled": true,
            "description": "rule3"
        },
        {
            "recipient": "@foo.com",
            "host": "smtp.domain.com",
            "port": 587,
            "mandatory_tls": false,
            "username": "",
            "password": "",
            "enabled": false,
            "description": "rule4"
        }
    ],
    "allOf": [
        {
            "$ref": "http://schema.nethserver.org/mail.json#/$defs/commit-relay-rule"
