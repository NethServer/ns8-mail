import json
import sys
import mail
import agent

request = json.load(sys.stdin)

sender=request.get('sender')
dest=request.get('dest')

class RelayNotFoundError(Exception):
    pass

sdb = mail.pcdb_connect()
try:
    cur = sdb.cursor()
    if sender:
        cur.execute("""DELETE FROM relayrules WHERE sender=?""", (sender,))
    elif dest:
        cur.execute("""DELETE FROM relayrules WHERE dest=?""", (dest,))
    if cur.rowcount == 0:
        raise RelayNotFoundError()

except RelayNotFoundError:
    sdb.rollback()
    agent.set_status('validation-failed')
    if sender:
        json.dump([{'field': 'sender', 'parameter': 'sender', 'value': sender, 'error':'sender_not_found'}], fp=sys.stdout)
    elif dest:
        json.dump([{'field': 'dest', 'parameter': 'dest', 'value': dest, 'error':'dest_not_found'}], fp=sys.stdout)
    sys.exit(2)

else:
    sdb.commit()

finally:
    sdb.close()
