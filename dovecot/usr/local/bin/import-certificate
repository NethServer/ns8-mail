# shellcheck shell=dash

set -e
dest=/etc/ssl/dovecot

tmpdir=$(mktemp -d)
trap 'rm -rf ${tmpdir}' EXIT
cd "${tmpdir}"
! diff -q server.pem "${dest}"/server.pem >/dev/null # abort if no diff is found

tar x -o -f -
install -o root -g root -m 444 "${tmpdir}"/server.pem "${dest}"/server.pem
install -o root -g root -m 400 "${tmpdir}"/server.key "${dest}"/server.key
