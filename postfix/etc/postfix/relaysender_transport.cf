#
# relaysender_transport -- select special smtp/smtps_from
#     transport, if MAIL FROM matches a sender relay rule
#

dbpath = /srv/pcdb.sqlite
query = SELECT transport || '_from'
  FROM relayrules
  WHERE enabled = 1 AND
  rule_type = 'sender' AND
  CASE INSTR('%s', '@')
    WHEN 1 THEN ('@' || rule_subject) = '%s'
    ELSE rule_subject = '%s'
  END
