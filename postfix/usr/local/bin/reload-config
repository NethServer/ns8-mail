# SPDX-License-Identifier: GPL-3.0-or-later
#

# shellcheck shell=dash disable=SC2034
# https://www.shellcheck.net/wiki/SC2034

set -e

ldap_schema=${POSTFIX_LDAP_SCHEMA:?}

pcdbquery() {
    sqlite3 -readonly -list /srv/pcdb.sqlite "${@}"
}

# Export variables for templates
set -a
if [ "$(( POSTFIX_DEBUG & 1 ))" -eq 1 ] ; then
    tmpl_debug_rewrite="-v"
fi

if [ "$(( POSTFIX_DEBUG & 2 ))" -eq 1 ] ; then
    tmpl_debug_delivery="-v"
fi

if [ ! -d /var/lib/umail ] ; then
    tmpl_sasl_commentout='#'
fi

S='$' # to escape $ in template

if [ -n "${POSTFIX_ORIGIN}" ]; then
    tmpl_transport_maps="inline:{ ${POSTFIX_ORIGIN}=lmtp:unix:/var/lib/umail/lmtp }"
    tmpl_virtual_mailbox_domains=${POSTFIX_ORIGIN}
    tmpl_myorigin=${POSTFIX_ORIGIN}

else
    tmpl_transport_maps=
    tmpl_virtual_mailbox_domains=
    tmpl_myorigin='$myhostname'
fi

tmpl_milters="${POSTFIX_MILTERS}"
tmpl_mynetworks="127.0.0.1/32 ${POSTFIX_TRUSTED_NETWORK}"
tmpl_myhostname="${POSTFIX_HOSTNAME:-$(hostname -f)}"
tmpl_debug_peer_list="${POSTFIX_DEBUG_PEERS:-\$mynetworks}"
tmpl_syslog_name=${POSTFIX_SYSLOG_NAME:-postfix}
tmpl_relay_domains=$(pcdbquery "SELECT group_concat(domain || '=' || transport) FROM domains WHERE transport LIKE '_mtp:%'")
tmpl_virtual_alias_domains=$(pcdbquery "SELECT group_concat(domain) FROM domains WHERE transport IS NULL AND domain NOT IN ('*', '${POSTFIX_ORIGIN}')")
tmpl_verify_recipient_address=$(pcdbquery "SELECT 'check_recipient_access inline:{ ' || group_concat(domain || '=reject_unverified_recipient', ' ') || ' }' FROM (SELECT domain FROM domains WHERE domain != '*' UNION SELECT '${POSTFIX_ORIGIN}' WHERE '${POSTFIX_ORIGIN}' != '')")
tmpl_reject_internal_myorigin=$(pcdbquery "SELECT 'check_recipient_access inline:{{ ${POSTFIX_ORIGIN} = REJECT access denied }}' WHERE '${POSTFIX_ORIGIN}' NOT IN (SELECT domain FROM domains WHERE domain != '*')")
if [ -z "${tmpl_reject_internal_myorigin}" ]; then
    tmpl_reject_internal_myorigin="check_recipient_access inline:{{ vmail@${POSTFIX_ORIGIN} = REJECT access denied }}"
fi
tmpl_domain_map=$(pcdbquery "SELECT 'inline:{' || group_concat('{@' || domain || CASE WHEN addusers = 1 THEN '=@${POSTFIX_ORIGIN}' ELSE ('=' || catchall) END || '}', ', ') || '}' FROM domains WHERE (addusers = 1 OR length(catchall) > 0) AND domain NOT IN ('${tmpl_myorigin}', '*')")

tmpl_addgroup_domains=$(pcdbquery "SELECT group_concat(domain, ', ') FROM domains WHERE addgroups = 1")
if [ -z "${tmpl_addgroup_domains}" ] || [ -z "${POSTFIX_LDAP_HOST}" ]; then
    # Turn off addgroups virtual alias lookups
    tmpl_laddgroups_table=''
else
    tmpl_laddgroups_table='ldap:$meta_directory/laddgroups.cf'
fi
if [ -z "${POSTFIX_LDAP_HOST}" ]; then
    # Turn off group expansion in virtual alias lookups
    tmpl_ldest_table=''
else
    tmpl_ldest_table='ldap:$meta_directory/ldest.cf'
fi
tmpl_ldap_bind_dn="${POSTFIX_LDAP_USER}"
tmpl_ldap_bind_pw="${POSTFIX_LDAP_PASS}"
tmpl_ldap_host="${POSTFIX_LDAP_HOST}"
tmpl_ldap_port="${POSTFIX_LDAP_PORT}"
tmpl_ldap_base="${POSTFIX_LDAP_BASE}"
set +a

envsubst >/etc/postfix/main.cf <"${TEMPLATES_DIR:?}/main.cf"
envsubst >/etc/postfix/master.cf <"${TEMPLATES_DIR:?}/master.cf"
envsubst >/etc/postfix/laddgroups.cf <"${TEMPLATES_DIR:?}/laddgroups-${ldap_schema}.cf"
envsubst >/etc/postfix/ldest.cf <"${TEMPLATES_DIR:?}/ldest-${ldap_schema}.cf"

if [ -z "${tmpl_sasl_commentout}" ] ; then
    cat /etc/postfix/dovecot-sasl.cf >> /etc/postfix/main.cf
fi

# Append override dir contents to main.cf:
(
    echo ""
    echo "# BEGIN Included directives from /etc/postfix/main.cf.d/*.cf:"
    find /etc/postfix/main.cf.d -name '*.cf' -exec cat '{}' \;
    echo "# END Included directives from /etc/postfix/main.cf.d/*.cf:"
    echo ""
) >> /etc/postfix/main.cf

if [ -n "${POSTFIX_DEBUG}" ] ; then
    postconf -n
fi

if postfix status 2>/dev/null ; then
    postfix reload
fi
